generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model PdfClientData {
    id                 Int                @id @default(autoincrement())
    fileName           String
    clientNumber       String?
    installationNumber String?
    vencimento         String?
    data               String
    valorAPagar        String?
    notaFiscal         String?
    serie              String?
    dataEmissao        String?
    codigoDeBarras     String?
    valoresFaturados   ValoresFaturados[]
    icmsTotal          String?
    pasepTotal         String?
    cofinsTotal        String?
    nomeCliente        String?
    distribuidora      String?
}

model ValoresFaturados {
    id              Int           @id @default(autoincrement())
    tipo            String
    quantidade      String // Aqui pode estar como String
    precoUnit       String // E aqui tamb√©m
    valorTotal      String
    pisCofins       String?
    icms            String?
    tarifaUnit      String?
    pdfClientData   PdfClientData @relation(fields: [pdfClientDataId], references: [id])
    pdfClientDataId Int
}
