{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build",
        "rootDir": "src"
    },
    "typeRoots": ["./node_modules/@types", "./@types"],
    "include": ["src/**/*.ts", "./src/utils/prisma.ts"],
    "exclude": ["node_modules", "build"]
}
